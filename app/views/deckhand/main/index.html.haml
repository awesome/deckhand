- content_for :head do
  = stylesheet_link_tag 'deckhand/bootstrap-3.0.3/css/bootstrap.min'
  = stylesheet_link_tag 'deckhand'

- content_for :end_js do
  = javascript_include_tag 'deckhand'
  :javascript
    Deckhand.init(#{Deckhand.config.model_names});

.container
  .row
    .col-md-4.col-md-offset-4
      .form-group#search
        %i.glyphicon.glyphicon-search
        %input.form-control(type="text")
  .row
    #cards.col-md-6.col-md-offset-3

  .row
    %pre= raw Deckhand.config.searchable_models.to_yaml

= render 'deckhand/templates'
