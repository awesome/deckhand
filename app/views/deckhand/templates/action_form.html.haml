.modal-header
  %h3 {{item._label}}: {{action | readableMethodName}}

.modal-body
  .alert.alert-danger(ng-show="error") {{error}}
  %form.form-horizontal
    - @form_class.inputs.each do |name, options|
      .form-group
        - if options[:type] == Boolean
          .col-sm-9.col-sm-offset-3
            .checkbox
              %label
                = angular_input "form.#{name}", options
                = readable_method_name name
        - else
          %label.col-sm-3.control-label= readable_method_name name
          .col-sm-9= angular_input "form.#{name}", options

.modal-footer
  %button.btn.btn-default(ng-click="cancel()") cancel
  %button.btn.btn-primary(ng-click="submit()") continue